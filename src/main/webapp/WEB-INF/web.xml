<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- /shop -->
    <servlet>
        <servlet-name>ShopControl</servlet-name>
        <servlet-class>com.ecommerce.control.ShopControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopControl</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>

    <!-- /category -->
    <servlet>
        <servlet-name>CategoryControl</servlet-name>
        <servlet-class>com.ecommerce.control.CategoryControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryControl</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>

    <!-- /order-history -->
    <servlet>
        <servlet-name>OrderHistoryControl</servlet-name>
        <servlet-class>com.ecommerce.control.OrderHistoryControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistoryControl</servlet-name>
        <url-pattern>/order-history</url-pattern>
    </servlet-mapping>
    <!-- /order-detail -->
    <servlet>
        <servlet-name>orderDetailControl</servlet-name>
        <servlet-class>com.ecommerce.control.orderDetailControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderDetailControl</servlet-name>
        <url-pattern>/order-detail</url-pattern>
    </servlet-mapping>

    <!-- /profile-page -->
    <servlet>
        <servlet-name>ProfileControl</servlet-name>
        <servlet-class>com.ecommerce.control.ProfileControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileControl</servlet-name>
        <url-pattern>/profile-page</url-pattern>
    </servlet-mapping>

    <!-- Product Management -->
    <!-- 1. Add Product -->
    <servlet>
        <servlet-name>AddProductControl</servlet-name>
        <servlet-class>com.ecommerce.control.AddProductControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProductControl</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>
    <!-- 2. Delete Product -->
    <servlet>
        <servlet-name>RemoveProduct</servlet-name>
        <servlet-class>com.ecommerce.control.RemoveProductControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveProduct</servlet-name>
        <url-pattern>/remove-product</url-pattern>
    </servlet-mapping>

    <!-- Chatbot OpenAI -->
    <servlet>
        <servlet-name>ChatbotControl</servlet-name>
        <servlet-class>com.ecommerce.control.ChatbotControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatbotControl</servlet-name>
        <url-pattern>/chatbot</url-pattern>
    </servlet-mapping>

    <!-- Error Handling -->
